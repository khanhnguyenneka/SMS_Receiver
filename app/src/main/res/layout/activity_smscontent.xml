<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="neka.sms.task2_final.SMSContent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_OK"
        android:id="@+id/btn_close"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300sp"
        android:layout_height="150sp"
        android:textSize="18sp"
        android:id="@+id/sms_text"
        android:layout_above="@+id/btn_close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/number_textview"
        android:id="@+id/textview_num"
        android:layout_above="@+id/sms_text"
        android:layout_alignLeft="@+id/sms_text"
        android:layout_alignStart="@+id/sms_text"
        android:layout_marginBottom="73dp" />

    <TextView
        android:layout_width="190sp"
        android:layout_height="30sp"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textview_number"
        android:layout_alignBottom="@+id/textview_num"
        android:layout_alignLeft="@+id/btn_close"
        android:layout_alignStart="@+id/btn_close" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/content_textview"
        android:id="@+id/textview_content"
        android:layout_above="@+id/sms_text"
        android:layout_alignLeft="@+id/sms_text"
        android:layout_alignStart="@+id/sms_text" />

</RelativeLayout>
